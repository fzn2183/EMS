@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "System Users";
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add New User</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Users List</h3>
        </div>
        <div class="card-body">
            <table id ="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
       
        <th>
            FullName
        </th>
        <th>
            IDNo
        </th
        <th>
            Role
        </th>
        <th>
            Email
        </th>
        <th>
            User PhoneNo
        </th>
        <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                 <td>
                    @Html.DisplayFor(modelItem => item.FullName)
               </td>
               <td>
                    @Html.DisplayFor(modelItem => item.NationalId)
                </td>
                   <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
               </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NormalizedEmail)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <div class="input-group input-group-lg">
                    <div class="input-group-prepend">
                        <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" >Action</button>
                    <ul class="dropdown-menu">
                        <li class="dropdown-item">
                          <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a>
                    </li>
                    <li class="dropdown-item">
                       <a asp-action="View" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i>View</a>
                    </li>
                    <li class="dropdown-item">
                      <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-Trash"></i>Delete</a>

                    </li>


                    </ul>
                    
                    </div>
                    </div>


                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>